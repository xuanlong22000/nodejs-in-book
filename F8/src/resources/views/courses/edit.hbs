<div class="mt-4">
    <h3>Update bai Post</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">

        <div class="mb-3">
            <label for="name" class="form-label">Chu De</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Mo ta trang thai</label>
            <textarea type="text" class="form-control" id="description" name="description">{{course.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video ID</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Level</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>